<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cksolutions.rosary.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="386dp" />

    <RelativeLayout
        android:id="@+id/relativeLayout9"
        android:layout_width="304dp"
        android:layout_height="127dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <TextView
            android:id="@+id/tvGlobalRosary"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="133dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="105dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tvMRosary"
            android:layout_toStartOf="@+id/tvMRosary"
            android:text="Global Balance"
            android:textAlignment="center"
            android:textColor="@color/btn_login_bg"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="372dp" />

        <TextView
            android:id="@+id/tvMercyRosary"
            android:layout_width="90dp"
            android:layout_height="54dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="133dp" />


        <TextView
            android:id="@+id/tvNRosary"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:layout_alignEnd="@+id/tvGlobalRosary"
            android:layout_alignRight="@+id/tvGlobalRosary"
            android:layout_below="@+id/tvGlobalRosary"
            android:text="Normal Rosary"
            android:textAlignment="center"
            android:textColor="@color/btn_login_bg"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="118dp" />


        <TextView
            android:id="@+id/tvMRosary"
            android:layout_width="105dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tvMercyRosary"
            android:text="Mercy Rosary"
            android:textAlignment="center"
            android:textColor="@color/btn_login_bg"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="118dp" />

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="309dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout9">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="341dp"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/btn_common"
            android:text="@string/account_balance"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/bg_register"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="312dp"
        android:layout_height="144dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">

        <Button
            android:id="@+id/btnThanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/btn_common"
            android:text="Give\nThanks"
            android:visibility="visible"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="439dp" />

        <Button
            android:id="@+id/btnDepositRosary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/btn_common"
            android:text="Deposit\nRosary"
            tools:backgroundTintMode="src_over"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="389dp" />

        <Button
            android:id="@+id/btnRequestPrayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/btn_common"
            android:text="REQUEST\nPRAYER"
            tools:layout_editor_absoluteX="193dp"
            tools:layout_editor_absoluteY="375dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="293dp"
        android:layout_height="89dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/tvBalance"
            android:layout_toStartOf="@+id/tvBalance"
            android:text="Normal Rosary"
            android:textColor="@color/btn_login_bg"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="76dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:text="Mercy Rosary"
            android:textColor="@color/btn_login_bg"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="127dp" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="86dp"
            android:layout_height="51dp"
            android:layout_alignEnd="@+id/tvBalance2"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tvBalance2"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="284dp"
            tools:layout_editor_absoluteY="30dp" />

        <TextView
            android:id="@+id/tvBalance2"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="124dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="307dp"
        android:layout_height="91dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/marynew2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="93dp"
            android:layout_marginStart="93dp"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2"
            app:srcCompat="@drawable/passion" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="108dp"
            android:layout_height="156dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/marynew1"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="159dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
